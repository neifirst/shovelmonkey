    <div>
        <table>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <!--<th>Trade Price</th>-->
                <th>VAT</th>
                <th>Price (Â£)</th>
                <th></th>
            </tr>
            #foreach($product in $products)
